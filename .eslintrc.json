{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["prettier", "import", "@typescript-eslint"],
  "extends": ["plugin:prettier/recommended", "prettier", "eslint:recommended", "plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    // "quotes": [2, "single", { "avoidEscape": true }],
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    // "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-explicit-any": 2,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "useTabs": false
      }
    ]
  }
}
